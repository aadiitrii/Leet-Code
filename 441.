class Solution {
public:
    int arrangeCoins(int n) {
        int low = 1;
        int high = n;
        while (low<=high){
            int mid = low +(high - low)/2;
            int sum = mid * (mid + 1)/2;
            if (n==sum){
                return mid;
            }
            else if (n>sum){
                low = mid + 1;
            }
            else{
                high = mid - 1;
            }
        }
        return high;
        
    }
};
