class Solution:
    def validPalindrome(self, s: str) -> bool:
        left, right = 0, len(s) - 1
        while left < right:
            if s[left] != s[right]:
                if self.is_pal(s, left + 1, right):
                    return True
                if self.is_pal(s, left, right - 1):
                    return True
                return False
            left += 1
            right -= 1
        return True
    def is_pal(self, s: str, i: int, j: int) -> bool:
        while i < j:
            if s[i] != s[j]:
                return False
            i += 1
            j -= 1
        return True
