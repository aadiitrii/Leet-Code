class Solution {
public:
    int numUniqueEmails(vector<string>& emails) {
                unordered_set<string> uniqueEmails;
        
        for (string email : emails) {
            string local;
            string domain;
            bool ignore = false;
            bool isDomain = false;
            
            for (char c : email) {
                if (c == '@') {
                    isDomain = true;
                    domain += c;
                } else if (isDomain) {
                    domain += c;
                } else if (c == '+') {
                    ignore = true;
                } else if (!ignore && c != '.') {
                    local += c;
                }
            }
            
            uniqueEmails.insert(local + domain);
        }
        
        return uniqueEmails.size();
    
    }
};
