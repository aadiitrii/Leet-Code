int* sortedSquares(int* nums, int numsSize, int* returnSize) {
    *returnSize = numsSize;
    int* result = (int*)malloc(numsSize * sizeof(int));
    int left = 0, right = numsSize - 1;
    int pos = numsSize - 1;

    while (left <= right) {
        int lval = nums[left] * nums[left];
        int rval = nums[right] * nums[right];
        if (lval > rval) {
            result[pos--] = lval;
            left++;
        } else {
            result[pos--] = rval;
            right--;
        }
    }
    return result;
}

